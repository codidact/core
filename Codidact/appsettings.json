{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning"
    }
  },

  "ConnectionStrings": {
    "CodidactContext": "Server=(localdb)\\mssqllocaldb;Database=Codidact;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "Kestrel": {
    "Limits": {
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100
    },
    "DisableStringReuse": true,
    "AddServerHeader": false
  },

  "AppSettings": {
    "ImageRoot": "uploads",
    "ThumbRoot": "thumbnails",
    "AttachmentRoot": "attachments",
    "InvalidUsernames": [
      "admin",
      "administrator"
    ],
    "KeyStorageDirectory": "/var/keys/"
  },

  /* email and tokens settings in secrets file - %appdata%\Roaming\Microsoft\UserSecrets */

  /*	"Tokens": {
		"CSPToken": "",
	},*/

}
