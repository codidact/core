<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
			autoShutDown="false"
      internalLogLevel="Error"
      internalLogFile="/var/log/asp/internal-nlog.txt"
			throwExceptions="true">
	

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
		
  <!-- the targets to write to -->
  <targets async="true">

		<!-- another file log, only own logs. Uses some ASP.NET core renderers -->
		<target xsi:type="File" name="ownFile-web" fileName="/var/log/asp/Codidact-own-${shortdate}.log"
            maxArchiveFiles="4"
						layout="${time}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

		<target xsi:type="File" name="aspFile-web" fileName="/var/log/asp/Codidact-asp-${shortdate}.log"
						maxArchiveFiles="4"
						layout="${time}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />
	</targets>

	<!-- rules to map from logger name to target -->
  <rules>
		<logger name="Microsoft.*" minLevel="Warn" writeTo="aspFile-web"/>
		<logger name="*" minlevel="Trace" writeTo="ownFile-web" />
	</rules>
</nlog>
